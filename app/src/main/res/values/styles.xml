<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/background_splash</item>
        <item name="tabSelectedTextColor">@color/background_splash</item>
        <item name="tabTextColor">@color/text_default</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/background_splash</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>